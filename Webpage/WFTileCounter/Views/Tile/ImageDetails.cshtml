@model IEnumerable<WFTileCounter.Models.TileImage>
@{
    ViewData["Title"] = "Edit Image Details for Tile";
}

<h1>Edit details for Images</h1>

@foreach (var image in Model)
{
    if (Model.First() == image)
    {
        <h4>@image.TileName</h4>
    }
}


<div class="row">
    <div class="col-md-12">
        <form asp-controller="Tile" asp-action="ImageEdit" method="post">

            <hr />
            <div class="row">
                @Html.EditorForModel()
            </div>
            <input type="submit" value="Submit Data" id="btnSubmit" />
            <hr />
        </form>
    </div>
</div>



