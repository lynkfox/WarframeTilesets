@model WFTileCounter.Models.FrequencyModels.CollectiblesViewModel

@{
    ViewData["Title"] = "Collectible";
}

    <div class="container">
        <div class="row">
            <h1>Collectibles for @Model.Tileset</h1>
        </div>
        
        <table class="table-sm table-hover table-dark mr-3">
            <thead>
                <tr>
                    <th scope="col">
                        Tile Name
                    </th>
                    <th scope="col" colspan="2">
                        Ayatan Statues
                    </th>
                    <th scope="col" colspan="2">
                        Syndicate Medallions
                    </th>
                    <th scope="col" colspan="2">
                        Cephalon Fragments
                    </th>
                    <th scope="col" colspan="2">
                        Somachord Fragments
                    </th>
                    <th scope="col" colspan="2">
                        Frame Fighter Fragments
                    </th>
                    <th scope="col" colspan="2">
                        Rare Containers
                    </th>
                    <th scope="col" colspan="2">
                        Sabotage Caches
                    </th>
                </tr>
                <tr>
                    <td></td>
                    <th scope="col" class="text-center">
                        <i style="font-size:.7em">#Counted</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.6em">%Chance</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.7em">#Counted</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.6em">%Chance</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.7em">#Counted</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.6em">%Chance</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.7em">#Counted</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.6em">%Chance</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.7em">#Counted</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.6em">%Chance</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.7em">#Counted</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.6em">%Chance</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.7em">#Counted</i>
                    </th>
                    <th scope="col" class="text-center">
                        <i style="font-size:.6em">%Chance</i>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Totals For @Model.Tileset</th>
                    <td class="border-left border-secondary">@Model.AyatanTotal</td>
                    <td class="border-right border-secondary">@Model.AyatanPercentage%</td>
                    <td class="border-left border-right border-secondary text-center" colspan="2">@Model.SyndicateRuns runs.</td>
                    <td class="border-left border-secondary">@Model.CephalonTotal</td>
                    <td class="border-right border-secondary">@Model.CephalonPercentage%</td>
                    <td class="border-left border-secondary">@Model.SomachordTotal</td>
                    <td class="border-right border-secondary">@Model.SomachordPercentage%</td>
                    <td class="border-left border-secondary">@Model.FrameFighterTotal</td>
                    <td class="border-right border-secondary">@Model.FrameFighterPercentage%</td>
                    <td class="border-left border-secondary">@Model.RareContainerTotal</td>
                    <td class="border-right border-secondary">@Model.RareContainerPercentage%</td>
                    <td class="border-left border-right border-secondary text-center" colspan="2">@Model.SabotageRuns runs.</td>
                </tr>
                <tr>

                </tr>

                @foreach(var tile in Model.TileCollectiblesList)
                {
                <tr>
                    <th scope="row">@Html.ActionLink(tile.ShortenedTileName, "ViewTile", "Tile", new { tileset = tile.TilesetName, tilename = tile.ShortenedTileName })</th>

                    @if (tile.AyatanCount == 0)
                    {
                        <td style="background-color:black" colspan="2"></td>
                    }
                    else
                    {
                        <td class="border-left border-secondary">@tile.AyatanCount</td>
                        <td class="border-right border-secondary">@tile.AyatanPercentagePerRun%</td>
                    }
                    @if (tile.MedallionCount == 0)
                    {
                        <td style="background-color:black" colspan="2"></td>
                    }
                    else
                    {
                        <td class="border-left border-secondary">@tile.MedallionCount</td>
                        <td class="border-right border-secondary"></td>
                    }
                    @if (tile.CephalonCount == 0)
                    {
                        <td style="background-color:black" colspan="2"></td>
                    }
                    else
                    {
                        <td class="border-left border-secondary">@tile.CephalonCount</td>
                        <td class="border-right border-secondary">@tile.CephalonPercentagePerRun%</td>
                    }
                    @if (tile.SomachordCount == 0)
                    {
                        <td style="background-color:black" colspan="2"></td>
                    }
                    else
                    {
                        <td class="border-left border-secondary">@tile.SomachordCount</td>
                        <td class="border-right border-secondary">@tile.SomachordPercentagePerRun%</td>
                    }
                    @if (tile.FrameFighterCount == 0)
                    {
                        <td style="background-color:black" colspan="2"></td>
                    }
                    else
                    {
                        <td class="border-left border-secondary">@tile.FrameFighterCount</td>
                        <td class="border-right border-secondary">@tile.FrameFighterPercentagePerRun%</td>
                    }
                    @if (tile.RareContainerCount == 0)
                    {
                        <td style="background-color:black" colspan="2"></td>
                    }
                    else
                    {
                        <td class="border-left border-secondary">@tile.RareContainerCount</td>
                        <td class="border-right border-secondary">@tile.RareContainerPercentagePerRun%</td>
                    }

                    @if (tile.SabotageCacheCount == 0)
                    {
                        <td style="background-color:black" colspan="2"></td>
                    }
                    else
                    {
                        <td class="border-left border-secondary">@tile.SabotageCacheCount</td>
                        <td class="border-right border-secondary"></td>
                    }

                </tr>
                    
                }
            </tbody>

        </table>
    </div>


